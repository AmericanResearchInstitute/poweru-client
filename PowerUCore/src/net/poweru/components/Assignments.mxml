<?xml version="1.0" encoding="utf-8"?>
<code:AssignmentsCode
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.code.*"
	width="100%"
	height="100%">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:AdvancedDataGrid id="grid" width="65%" height="100%">
		<mx:columns>
			<mx:AdvancedDataGridColumn dataField="last_name" headerText="Last Name" labelFunction="{labelFromUser}" sortCompareFunction="{SortCompareFunctionFactory(['last_name'])}"/>
			<mx:AdvancedDataGridColumn dataField="first_name" headerText="First Name" labelFunction="{labelFromUser}" sortCompareFunction="{SortCompareFunctionFactory(['first_name'])}"/>
			<mx:AdvancedDataGridColumn dataField="type" headerText="Type" labelFunction="{labelFromTask}" sortCompareFunction="{SortCompareFunctionFactory(['type'])}"/>
			<mx:AdvancedDataGridColumn dataField="status" headerText="Status" sortCompareFunction="{SortCompareFunctionFactory(['status'])}"/>
		</mx:columns>
	</mx:AdvancedDataGrid>
	<mx:VBox width="35%" height="100%">
		<mx:HBox>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
		</mx:HBox>
		<mx:Panel width="100%" title="Details" cornerRadius="16" roundedBottomCorners="true">
			<mx:Form width="100%">
				<mx:FormItem label="Last:">
					<mx:Label text="{grid.selectedItem.user.last_name}" />
				</mx:FormItem>
				<mx:FormItem label="First:">
					<mx:Label text="{grid.selectedItem.user.first_name}" />
				</mx:FormItem>
				<mx:FormItem label="Type:">
					<mx:Label text="{grid.selectedItem.task.type}" />
				</mx:FormItem>
				<mx:FormItem label="Status:">
					<mx:Label text="{grid.selectedItem.status}" />
				</mx:FormItem>
				<mx:FormItem label="Status Log:">
					<mx:Text maxWidth="300" text="{grid.selectedItem.status_change_log}" />
				</mx:FormItem>
			</mx:Form>
			<mx:HBox id="buttonBox">
				<mx:Button label="Edit" id="editButton" enabled="{grid.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITASSIGNMENT, grid.selectedItem.id]))}"/>
			</mx:HBox>
		</mx:Panel>
	</mx:VBox>
</code:AssignmentsCode>
