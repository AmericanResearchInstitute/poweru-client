<?xml version="1.0" encoding="utf-8"?>
<code:SessionUserRoleCode
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.code.*"
	width="100%"
	height="100%">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.events.ViewEvent;
		]]>
	</mx:Script>
	<mx:List id="list" labelField="name" height="100%" minWidth="200"/>
	<mx:VBox>
		<mx:HBox>
			<mx:Button label="Add" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CREATESESSIONUSERROLE, null]))}"/>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
		</mx:HBox>
		<mx:TitleWindow title="Session Role Details" minWidth="400">
			<mx:Spacer height="4" width="4"/>
			<mx:HBox>
				<mx:Spacer height="4" width="4"/>
				<mx:Button label="Edit" enabled="{list.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITSESSIONUSERROLE, list.selectedItem.id]))}"/>
			</mx:HBox>
			<mx:Form>
				<mx:FormItem label="Name:" fontWeight="bold" backgroundColor="#FFFFFF">
					<mx:Label text="{list.selectedItem.name}"/>
				</mx:FormItem>
			</mx:Form>
		</mx:TitleWindow>
	</mx:VBox>
</code:SessionUserRoleCode>
