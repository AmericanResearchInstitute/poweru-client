<?xml version="1.0" encoding="utf-8"?>
<code:BasePopulatedComponentCode
	creationPolicy="all"
	sortedFieldName="name"
	width="100%"
	height="100%"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.code.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:DataGrid id="grid" width="60%" height="100%">
		<mx:columns>
			<mx:DataGridColumn dataField="name" headerText="Name"/>
			<mx:DataGridColumn dataField="title" headerText="Title" />
		</mx:columns>
	</mx:DataGrid>
	<mx:VBox width="40%" height="100%">
		<mx:HBox>
			<mx:Button label="Add" id="addButton" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.UPLOADFILEDOWNLOAD, '']))}"/>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
		</mx:HBox>
		<mx:Panel width="100%" title="Details" cornerRadius="16" roundedBottomCorners="true">
			<mx:Spacer height="4" width="4"/>
			<mx:HBox id="buttonBox">
				<mx:Spacer height="4" width="4"/>
				<mx:Button label="Edit" id="editButton" enabled="{grid.selectedItem != null &amp;&amp; isEditable(grid.selectedItem)}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITFILEDOWNLOAD, grid.selectedItem.id]))}"/>
				<mx:Button label="Assignments" enabled="{grid.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.VIEWFILEDOWNLOADASSIGNMENTS, grid.selectedItem.id]))}"/>
			</mx:HBox>
			<mx:Form width="100%">
				<mx:FormItem label="Name:">
					<mx:Label text="{grid.selectedItem.name}" />
				</mx:FormItem>
				<mx:FormItem label="Title:">
					<mx:Label text="{grid.selectedItem.title}" />
				</mx:FormItem>
				<mx:FormItem label="Description:">
					<mx:Label text="{grid.selectedItem.description}" />
				</mx:FormItem>
				<mx:FormItem label="Organization:">
					<mx:Label text="{grid.selectedItem.organization.name}" />
				</mx:FormItem>
			</mx:Form>	
				
			<mx:TabNavigator width="100%" minWidth="350" minHeight="300">
				<mx:VBox width="100%" label="Achievements">
					<mx:DataGrid id="achievements" dataProvider="{grid.selectedItem.achievements}" width="100%" height="100%">
						<mx:columns>
							<mx:DataGridColumn headerText="Name" dataField="name" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
						</mx:columns>
					</mx:DataGrid>
				</mx:VBox>
				<mx:VBox label="Prerequisites" width="100%" height="100%">
					<mx:TabNavigator width="100%" height="100%">
						<mx:VBox label="Tasks" width="100%">
							<mx:DataGrid dataProvider="{grid.selectedItem.prerequisite_tasks}" width="100%" height="100%">
								<mx:columns>
									<mx:DataGridColumn headerText="Name" dataField="name" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
									<mx:DataGridColumn headerText="Type" dataField="type" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
								</mx:columns>
							</mx:DataGrid>
						</mx:VBox>
						<mx:VBox label="Achievements" width="100%" height="100%">
							<mx:DataGrid dataProvider="{grid.selectedItem.prerequisite_achievements}" width="100%" height="100%">
								<mx:columns>
									<mx:DataGridColumn headerText="Name" dataField="name"/>
								</mx:columns>
							</mx:DataGrid>
						</mx:VBox>
					</mx:TabNavigator>
				</mx:VBox>
				<mx:VBox label="Prices" width="100%">
					<mx:DataGrid dataProvider="{grid.selectedItem.task_fees}" width="100%" height="100%">
						<mx:columns>
							<mx:DataGridColumn headerText="Price" dataField="price" sortCompareFunction="{SortCompareFunctionFactory(['price'])}"/>
							<mx:DataGridColumn headerText="Name" dataField="name" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
						</mx:columns>
					</mx:DataGrid>
				</mx:VBox>
			</mx:TabNavigator>
		</mx:Panel>
	</mx:VBox>

	<code:states>
		<mx:State name="{StateNames.SERV_DEALER_ADMIN}">
			<mx:RemoveChild target="{editButton}"/>
			<mx:RemoveChild target="{addButton}"/>
		</mx:State>
		<mx:State name="{StateNames.ADMIN_ASSISTANT}" basedOn="{StateNames.SERV_DEALER_ADMIN}"/>
	</code:states>
	
</code:BasePopulatedComponentCode>
