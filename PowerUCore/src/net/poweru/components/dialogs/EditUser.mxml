<?xml version="1.0" encoding="utf-8"?>
<EditUserCode
	title="Edit User"
	cornerRadius="16"
	creationPolicy="all"
	creationComplete="onCreationComplete(event)"
	xmlns="net.poweru.components.dialogs.code.*"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:User="net.poweru.generated.model.User.*"
	xmlns:parts="net.poweru.components.parts.*"
	xmlns:validators="net.poweru.components.validators.*"
	xmlns:widgets="net.poweru.components.widgets.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Constants;
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:Form defaultButton="{submit}" width="100%" id="form">
		<mx:FormItem label="Title" width="{firstFormItem.width}">
			<widgets:TitleComboBox id="titleInput" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="First" id="firstFormItem">
			<User:FirstNameInput id="first"/>
		</mx:FormItem>
		<mx:FormItem label="Last">
			<User:LastNameInput id="last"/>
		</mx:FormItem>
		<mx:FormItem label="Email">
			<User:EmailInput id="email"/>
		</mx:FormItem>
		<mx:FormItem label="Phone">
			<User:PhoneInput id="phone"/>
		</mx:FormItem>
		<mx:FormItem id="statusFI" label="Status">
			<mx:ComboBox id="statusInput" />
		</mx:FormItem>
		<mx:FormItem id="oldPassword" label="Old Password">
			<mx:TextInput id="oldPasswordInput" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem id="password1" label="New Password">
			<mx:TextInput id="password1Input" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem id="password2" label="New Password Again">
			<mx:TextInput id="password2Input" displayAsPassword="true"/>
		</mx:FormItem>
	</mx:Form>
	<mx:TabNavigator width="100%" minHeight="320">
		<mx:VBox width="100%" height="100%" label="Groups">
			<mx:DataGrid id="groups" dataProvider="{groupsDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Name" dataField="name"/>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox>
				<mx:Button label="Add" id="addGroupButton" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSEGROUP, chooserRequestTracker.getChooserRequest(Places.CHOOSEGROUP, groupsDataSet.toArray())]))}"/>
				<mx:Button label="Remove" id="removeGroupButton" enabled="{groups.selectedItem != null}" click="{onRemoveGroup(event)}"/>
			</mx:HBox>
		</mx:VBox>
		<mx:VBox width="100%" height="100%" label="Orgs" minHeight="260">
			<mx:DataGrid id="orgs" dataProvider="{orgDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Organization" dataField="organization_name" sortCompareFunction="{SortCompareFunctionFactory(['organization_name'])}"/>
					<mx:DataGridColumn headerText="Role" dataField="role_name" sortCompareFunction="{SortCompareFunctionFactory(['role_name'])}"/>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox horizontalAlign="right" width="100%" id="addOrganizationFI">
				<parts:AddOrganization id="addOrganization" minHeight="86"/>
			</mx:HBox>
		</mx:VBox>
		<mx:VBox width="100%" height="100%" label="Credentials">
			<mx:DataGrid id="credentials" dataProvider="{credentialsDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Name" dataField="credential_type_name"/>
					<mx:DataGridColumn headerText="Status" dataField="status"/>
					<mx:DataGridColumn headerText="Expires">
						<mx:itemRenderer>
							<mx:Component>
								<mx:HBox>
									<mx:DateFormatter id="formatDate" formatString="MM/DD/YYYY"/>
									<mx:Label text="{formatDate.format(data.date_expires)}"/>
								</mx:HBox>
							</mx:Component>
						</mx:itemRenderer>
					</mx:DataGridColumn>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox>
				<mx:Button label="Edit" id="editCredentialButton" enabled="{credentials.selectedItem != null}" click="dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITCREDENTIAL, credentials.selectedItem.id]))"/>
				<mx:Button label="Revoke" id="revokeCredentialButton" enabled="{credentials.selectedItem != null &amp;&amp; credentials.selectedItem.status != 'revoked'}" click="{onClickRevokeCredential(event)}"/>
			</mx:HBox>
		</mx:VBox>
	</mx:TabNavigator>
	
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onValidatedSubmit(event)"/>
		<mx:Button label="Cancel" click="dispatchEvent(new ViewEvent(ViewEvent.CANCEL))"/>
	</mx:HBox>

	<states>
		<mx:State name="{StateNames.USER}">
			<mx:RemoveChild target="{statusFI}"/>
			<mx:RemoveChild target="{addGroupButton}"/>
			<mx:RemoveChild target="{removeGroupButton}"/>
			<mx:RemoveChild target="{addOrganizationFI}"/>
			<mx:RemoveChild target="{editCredentialButton}"/>
			<mx:RemoveChild target="{revokeCredentialButton}"/>
		</mx:State>
		<mx:State name="{StateNames.STUDENT}" basedOn="{StateNames.USER}"/>
		<mx:State name="{StateNames.OWNERMANAGER}" basedOn="{StateNames.USER}"/>
		<mx:State name="{StateNames.PENDING_USER}" basedOn="{StateNames.USER}"/>
		<mx:State name="{StateNames.NO_ORG_USER}" basedOn="{StateNames.USER}"/>
		<mx:State name="{StateNames.SUPERADMIN}">
			<mx:RemoveChild target="{oldPassword}"/>
		</mx:State>
		<mx:State name="{StateNames.ORG_ADMIN}" basedOn="{StateNames.SUPERADMIN}"/>
		<mx:State name="{StateNames.CATEGORYMANAGER}" basedOn="{StateNames.USER}"/>
		<mx:State name="{StateNames.SERV_DEALER_ADMIN}" basedOn="{StateNames.USER}"/>
	</states>
	
	<mx:Array id="validators">
		<validators:StringEqualityValidator source="{password2Input}" property="text" foreignObject="{password1Input}" foreignProperty="text"/> 
	</mx:Array>
	
</EditUserCode>
