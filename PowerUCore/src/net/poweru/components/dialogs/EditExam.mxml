<?xml version="1.0" encoding="utf-8"?>
<code:EditExamCode
	creationPolicy="all"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	xmlns:Exam="net.poweru.generated.model.Exam.*" xmlns:parts="net.poweru.components.parts.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:Form id="form" defaultButton="{submit}">
		<mx:FormItem label="Name">
			<Exam:NameInput id="nameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Title">
			<Exam:TitleInput id="titleInput"/>
		</mx:FormItem>
		<mx:FormItem label="Description">
			<mx:TextArea id="descriptionInput"/>
		</mx:FormItem>
		<mx:FormItem label="Passing Score">
			<mx:TextInput restrict="0-9" id="passingScoreInput"/>
		</mx:FormItem>
		<mx:FormItem label="Organization" required="true">
			<mx:HBox>
				<mx:Label id="orgLabel" text="{chosenOrganization.name}"/>
				<mx:Button label="Choose Organization" click="dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSEORGANIZATION, chooserRequestTracker.getChooserRequest(Places.CHOOSEORGANIZATION)]))"/>
			</mx:HBox>
		</mx:FormItem>
	</mx:Form>
	<mx:TabNavigator width="100%" minWidth="350">
		<mx:VBox label="Achievements" width="100%">
			<mx:DataGrid id="achievements" dataProvider="{achievementDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Name" dataField="name" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox>
				<mx:Button label="Add" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSEACHIEVEMENT, achievementDataSet.toArray()]))}"/>
				<mx:Button label="Remove" enabled="{achievements.selectedItem != null}" click="{onRemoveAchievement(event)}"/>
			</mx:HBox>
		</mx:VBox>
		<mx:VBox label="Prerequisites" width="100%">
			<mx:DataGrid id="prerequisites" dataProvider="{prerequisiteDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Name" dataField="name" sortCompareFunction="{SortCompareFunctionFactory(['name'])}"/>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox>
				<mx:Button label="Add" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSETASK, prerequisiteDataSet.toArray().concat(pk)]))}"/>
				<mx:Button label="Remove" enabled="{prerequisites.selectedItem != null}" click="{onRemoveTask(event)}"/>
			</mx:HBox>
		</mx:VBox>
		<mx:VBox label="Fees" width="100%">
			<parts:EditTaskFees id="editTaskFees"/>
		</mx:VBox>
	</mx:TabNavigator>
	<code:validators>
		<mx:NumberValidator source="{passingScoreInput}" property="text" domain="int" allowNegative="false" required="false"/>
		<mx:StringValidator source="{orgLabel}" property="text" required="true"/>
	</code:validators>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onValidatedSubmit(event)"/>
		<mx:Button label="Cancel" click="dispatchEvent(new ViewEvent(ViewEvent.CANCEL))"/>
	</mx:HBox>
	
</code:EditExamCode>
