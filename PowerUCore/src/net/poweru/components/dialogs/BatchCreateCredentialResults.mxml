<?xml version="1.0" encoding="utf-8"?>
<code:BatchCreateCredentialResultsCode
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	title="Batch Create Credential Results"
	minWidth="650"
	minHeight="400"
	xmlns:parts="net.poweru.components.parts.*">
	
	<mx:TabNavigator width="100%" height="100%">
		<mx:HBox label="{'Success (' + successResults.length + ')'}" width="100%" height="100%">
			<mx:DataGrid dataProvider="{successResults}" width="100%" height="100%">
				<mx:columns>
					<parts:NestedDataGridColumn nestedName="user.last_name" headerText="Last Name"/>
					<parts:NestedDataGridColumn nestedName="user.first_name" headerText="First Name"/>
					<parts:NestedDataGridColumn nestedName="credential_type.name" headerText="Credential"/>
					<mx:DataGridColumn headerText="Expires">
						<mx:itemRenderer>
							<mx:Component>
								<mx:HBox>
									<mx:DateFormatter id="formatDate" formatString="MM/DD/YYYY"/>
									<mx:Label text="{formatDate.format(data.date_expires)}"/>
								</mx:HBox>
							</mx:Component>
						</mx:itemRenderer>
					</mx:DataGridColumn>
				</mx:columns>
			</mx:DataGrid>
		</mx:HBox>
		<mx:HBox label="{'Error (' + errorResults.length + ')'}" enabled="{errorResults.length &gt; 0}" width="100%" height="100%">
			<mx:DataGrid dataProvider="{errorResults}" width="100%" height="100%">
				<mx:columns>
					<parts:NestedDataGridColumn nestedName="user.last_name" headerText="Last Name"/>
					<parts:NestedDataGridColumn nestedName="user.first_name" headerText="First Name"/>
					<mx:DataGridColumn headerText="Credential" dataField="name"/>
				</mx:columns>
			</mx:DataGrid>
		</mx:HBox>
	</mx:TabNavigator>
</code:BatchCreateCredentialResultsCode>
