<?xml version="1.0" encoding="utf-8"?>
<code:EmailSessionParticipantsCode
	title="Email Session Participants"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	xmlns:widgets="net.poweru.components.widgets.*">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
		]]>
	</mx:Script>
	<widgets:ResizingTextArea id="messageInput" minHeight="400" minWidth="600"/>
	
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onSubmit(event)"/>
		<mx:Button label="Cancel" click="PopUpManager.removePopUp(this); clear()"/>
	</mx:HBox>
</code:EmailSessionParticipantsCode>
