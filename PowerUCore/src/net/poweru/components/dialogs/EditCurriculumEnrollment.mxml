<?xml version="1.0" encoding="utf-8"?>
<code:EditCurriculumEnrollmentCode
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	xmlns:Curriculum="net.poweru.generated.model.Curriculum.*"
	xmlns:widgets="net.poweru.components.widgets.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
		]]>
	</mx:Script>
	<mx:Form defaultButton="{submit}">
		<mx:FormItem label="Name">
			<Curriculum:NameInput id="nameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Description:">
			<widgets:ResizingTextArea minWidth="300" id="descriptionInput"/>
		</mx:FormItem>
		<mx:FormItem label="Start" required="true">
			<mx:DateField id="startInput" change="{onStartDateChosen(event)}"/>
		</mx:FormItem>
		<mx:FormItem label="End" required="true">
			<mx:DateField id="endInput" enabled="{startInput.selectedDate != null}"/>
		</mx:FormItem>
		<mx:FormItem label="Organization" required="true">
			<mx:HBox>
				<mx:TextInput editable="false" id="orgLabel" text="{chosenOrganization.name}"/>
				<mx:Button id="orgButton" label="Choose Organization" click="dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSEORGANIZATION, chooserRequestTracker.getChooserRequest(Places.CHOOSEORGANIZATION)]))"/>
			</mx:HBox>
		</mx:FormItem>
	</mx:Form>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onValidatedSubmit(event)"/>
		<mx:Button label="Cancel" click="dispatchEvent(new ViewEvent(ViewEvent.CANCEL))"/>
	</mx:HBox>
	<code:validators>
		<mx:DateValidator source="{startInput}" property="selectedDate" required="true"/>
		<mx:DateValidator source="{endInput}" property="selectedDate" required="true"/>
	</code:validators>
	
	<code:states>
		<mx:State name="{StateNames.ORG_ADMIN}">
			<mx:RemoveChild target="{orgButton}"/>
		</mx:State>
	</code:states>
</code:EditCurriculumEnrollmentCode>
