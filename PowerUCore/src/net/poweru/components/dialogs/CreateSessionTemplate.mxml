<?xml version="1.0" encoding="utf-8"?>
<code:CreateSessionTemplateCode
	title="Create Session Template"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	xmlns:SessionTemplate="net.poweru.generated.model.SessionTemplate.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.events.ViewEvent;
		]]>
	</mx:Script>
	<mx:Form>
		<mx:FormItem label="Short Name">
			<SessionTemplate:ShortnameInput id="shortNameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Full Name">
			<SessionTemplate:FullnameInput id="fullNameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Reminder Lead Time">
			<mx:TextInput id="leadTimeInput" />
		</mx:FormItem>
		<mx:FormItem label="Sequence">
			<mx:TextInput id="sequenceInput" />
		</mx:FormItem>
		<mx:FormItem label="Description">
			<mx:TextArea id="descriptionInput" />
		</mx:FormItem>
	</mx:Form>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onValidatedSubmit(event)"/>
		<mx:Button label="Cancel" click="dispatchEvent(new ViewEvent(ViewEvent.CANCEL))"/>
	</mx:HBox>
</code:CreateSessionTemplateCode>
