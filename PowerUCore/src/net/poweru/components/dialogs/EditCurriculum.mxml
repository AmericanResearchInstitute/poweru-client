<?xml version="1.0" encoding="utf-8"?>
<code:EditCurriculumCode
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.dialogs.code.*"
	xmlns:Curriculum="net.poweru.generated.model.Curriculum.*"
	xmlns:widgets="net.poweru.components.widgets.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Constants;
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.LabelFunctions;
		]]>
	</mx:Script>
	<mx:Form defaultButton="{submit}">
		<mx:FormItem label="Name">
			<Curriculum:NameInput id="nameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Description:">
			<widgets:ResizingTextArea minWidth="300" id="descriptionInput"/>
		</mx:FormItem>
		<mx:FormItem id="activeFormItem" label="Active:">
			<mx:CheckBox id="activeInput" toolTip="{Constants.ACTIVE_CHECKBOX_TOOLTIP}"/>
		</mx:FormItem>
		<mx:FormItem label="Tasks" width="100%">
			<mx:DataGrid id="tasks" dataProvider="{curriculumTaskAssociationDataSet}" width="100%">
				<mx:columns>
					<mx:DataGridColumn headerText="Name" dataField="task_name"/>
					<mx:DataGridColumn headerText="Type" dataField="task_type" labelFunction="{LabelFunctions.taskType}"/>
				</mx:columns>
			</mx:DataGrid>
			<mx:HBox>
				<mx:Button label="Add Task" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSETASK, chooserRequestTracker.getChooserRequest(Places.CHOOSETASK, chosenTasks)]))}"/>
				<mx:Button label="Add Task Bundle" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CHOOSETASKBUNDLE, chooserRequestTracker.getChooserRequest(Places.CHOOSETASKBUNDLE)]))}"/>
				<mx:Button label="Remove" enabled="{tasks.selectedItem != null}" click="{onRemoveTask(event)}"/>
			</mx:HBox>
		</mx:FormItem>
	</mx:Form>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="submit" label="Submit" click="onValidatedSubmit(event)"/>
		<mx:Button label="Cancel" click="dispatchEvent(new ViewEvent(ViewEvent.CANCEL))"/>
	</mx:HBox>
	
	<code:states>
		<mx:State name="{StateNames.ORG_ADMIN}">
			<mx:RemoveChild target="{activeFormItem}"/>
		</mx:State>
	</code:states>
</code:EditCurriculumCode>
