<?xml version="1.0" encoding="utf-8"?>
<code:CurriculumEnrollmentsCode
	width="100%"
	height="100%"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.code.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:AdvancedDataGrid id="grid" width="65%" height="100%" dataProvider="{dataProvider}">
		<mx:columns>
			<mx:AdvancedDataGridColumn dataField="curriculum_name" headerText="Curriculum Name"/>
			<mx:AdvancedDataGridColumn dataField="start" headerText="Start"/>
			<mx:AdvancedDataGridColumn dataField="end" headerText="End"/>
		</mx:columns>
	</mx:AdvancedDataGrid>
	<mx:VBox width="35%" height="100%">
		<mx:HBox>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
		</mx:HBox>
		<mx:Panel width="100%" title="Details" cornerRadius="16" roundedBottomCorners="true">
			<mx:Form>
				<mx:FormItem label="Curriculum:">
					<mx:Label text="{grid.selectedItem.curriculum_name}" />
				</mx:FormItem>
				<mx:FormItem label="First:">
					<mx:Label text="{grid.selectedItem.start}" />
				</mx:FormItem>
				<mx:FormItem label="Last:">
					<mx:Label text="{grid.selectedItem.end}" />
				</mx:FormItem>
				<mx:FormItem label="Students:">
					<mx:List dataProvider="{grid.selectedItem.users}" labelFunction="{formatName}"/>
				</mx:FormItem>
			</mx:Form>
			<mx:HBox id="buttonBox">
				<mx:Button label="Edit" id="editButton" enabled="{grid.selectedItem != null}"/>
				<!--<mx:Button label="Edit" id="editButton" enabled="{grid.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITCURRICULUMENROLLMENTS, grid.selectedItem.id]))}"/>-->
			</mx:HBox>	
		</mx:Panel>
	</mx:VBox>
</code:CurriculumEnrollmentsCode>
