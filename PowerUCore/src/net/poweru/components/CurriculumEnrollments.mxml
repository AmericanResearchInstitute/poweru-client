<?xml version="1.0" encoding="utf-8"?>
<code:CurriculumEnrollmentsCode
	width="100%"
	height="100%"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:code="net.poweru.components.code.*">
	<mx:Script>
		<![CDATA[
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
			import net.poweru.utils.LabelFunctions;
			import net.poweru.utils.SortCompareFunctionFactory;
		]]>
	</mx:Script>
	<mx:DataGrid id="grid" width="65%" height="100%" change="onChange(event)">
		<mx:columns>
			<mx:DataGridColumn dataField="name" headerText="Name"/>
			<mx:DataGridColumn headerText="Start">
				<mx:itemRenderer>
					<mx:Component>
						<mx:HBox>
							<mx:DateFormatter id="formatDate" formatString="MM/DD/YYYY"/>
							<mx:Label text="{formatDate.format(data.start)}"/>
						</mx:HBox>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>
			<mx:DataGridColumn headerText="End">
				<mx:itemRenderer>
					<mx:Component>
						<mx:HBox>
							<mx:DateFormatter id="formatDate" formatString="MM/DD/YYYY"/>
							<mx:Label text="{formatDate.format(data.end)}"/>
						</mx:HBox>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>
		</mx:columns>
	</mx:DataGrid>
	<mx:VBox width="35%" height="100%">
		<mx:HBox>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
		</mx:HBox>
		<mx:Panel width="100%" title="Details" cornerRadius="16" roundedBottomCorners="true">
			<mx:Spacer height="4" width="4"/>
			<mx:HBox id="buttonBox">
				<mx:Spacer height="4" width="4"/>
				<mx:Button label="Edit" id="editButton" enabled="{grid.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITCURRICULUMENROLLMENT, grid.selectedItem.id]))}"/>
				<mx:Button label="Enrollments" enabled="{grid.selectedItem != null}" click="dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CURRICULUMENROLLMENTUSERS, grid.selectedItem.users]))"/>
			</mx:HBox>
			<mx:Form>
				<mx:FormItem label="Name:">
					<mx:Label text="{grid.selectedItem.name}" />
				</mx:FormItem>
				<mx:FormItem label="Start:">
					<mx:Label text="{dateFormatter.format(grid.selectedItem.start)}" />
				</mx:FormItem>
				<mx:FormItem label="End:">
					<mx:Label text="{dateFormatter.format(grid.selectedItem.end)}" />
				</mx:FormItem>
				<mx:FormItem label="Description:">
					<mx:Text text="{grid.selectedItem.description}" />
				</mx:FormItem>
			</mx:Form>
			<mx:Panel title="Tasks" width="100%">
				<mx:DataGrid width="100%" dataProvider="{tasks}">
					<mx:columns>
						<mx:DataGridColumn headerText="Name" dataField="name"/>
						<mx:DataGridColumn headerText="Type" dataField="type" labelFunction="{LabelFunctions.taskType}"/>
					</mx:columns>
				</mx:DataGrid>
			</mx:Panel>
			<mx:Spacer height="4" width="4"/>
		</mx:Panel>
	</mx:VBox>
	
	<code:states>
		<mx:State name="{StateNames.SERV_DEALER_ADMIN}">
			<mx:RemoveChild target="{editButton}"/>
		</mx:State>
	</code:states>
	
</code:CurriculumEnrollmentsCode>
