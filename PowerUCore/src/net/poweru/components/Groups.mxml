<?xml version="1.0" encoding="utf-8"?>
<BaseActivePopulatedComponentCode
	sortedFieldName="name"
	xmlns="net.poweru.components.code.*"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%"
	height="100%"
	xmlns:components="com.hillelcoren.components.*">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.effects.Fade;
			
			import net.poweru.Places;
			import net.poweru.StateNames;
			import net.poweru.events.ViewEvent;
			import net.poweru.model.DataSet;
		]]>
	</mx:Script>
	
	<states>
		<mx:State name="{StateNames.OWNERMANAGER}">
			<mx:RemoveChild target="{addButton}"/>
			<mx:RemoveChild target="{editButtonBox}"/>
		</mx:State>
	</states>
	
	<mx:Fade id="fadeOut" alphaFrom="1.0" alphaTo="0.0"/>
	<mx:Fade id="fadeIn" alphaFrom="0.0" alphaTo="1.0"/>

	<mx:VBox height="100%" width="30%">
		<mx:FormItem label="Search">
			<components:AutoComplete dataProvider="{grid.dataProvider as ArrayCollection}" labelField="name"/>
		</mx:FormItem>
		<mx:DataGrid id="grid" height="100%" width="100%">
			<mx:columns>
				<mx:DataGridColumn headerText="Name" dataField="name"/>
			</mx:columns>
		</mx:DataGrid>
	</mx:VBox>
	<mx:VBox>
		<mx:HBox>
			<mx:Button label="Add" id="addButton" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.CREATEGROUP, null]))}"/>
			<mx:Button label="Refresh" click="{dispatchEvent(new ViewEvent(ViewEvent.REFRESH))}"/>
			<mx:Button label="{groupHelp.visible ? 'Close Help' : 'Help'}"
				click="{groupHelp.visible = !groupHelp.visible}"/>
			<mx:CheckBox id="showInactiveInput" label="Show Inactive" change="grid.dataProvider.refresh()"/>
		</mx:HBox>
		<mx:TitleWindow title="Group Details" id="detailsTW" minWidth="300">
			<mx:Spacer width="4" height="4"/>
			<mx:HBox id="editButtonBox">
				<mx:Spacer width="4" height="4"/>
				<mx:Button label="Edit" enabled="{grid.selectedItem != null}" click="{dispatchEvent(new ViewEvent(ViewEvent.SHOWDIALOG, [Places.EDITGROUP, grid.selectedItem.id]))}"/>
			</mx:HBox>
			<mx:Form>
				<mx:FormItem label="Name:">
					<mx:Label text="{grid.selectedItem.name}"/>
				</mx:FormItem>
			</mx:Form>
		</mx:TitleWindow>
		<mx:TitleWindow title="Group Help" id="groupHelp" width="{detailsTW.width}" showEffect="{fadeIn}" hideEffect="{fadeOut}" visible="false">
			<mx:VBox backgroundColor="#FFFFFF" width="100%">
				<mx:HBox backgroundColor="#E5FFFF" width="100%">
					<mx:Text text="Groups are collections of users. " fontStyle="italic" fontSize="11" fontWeight="bold" width="100%"/>
				</mx:HBox>
				<mx:Text text="Every user may be a member of one or more groups. Users may be removed from or added to groups by administrators. Users may belong to an unlimited &#xa;number of groups." width="100%" fontSize="11"/>
				<mx:HBox backgroundColor="#E5FFFF" width="100%">
					<mx:Text text="Default Group" fontStyle="italic" width="100%" fontSize="11" fontWeight="bold"/>
				</mx:HBox>
				<mx:Text text="Every user is added as a member of the Default group when the user is created in the system. Users may be removed from the default group." width="100%" fontSize="11"/>
			</mx:VBox>
		</mx:TitleWindow>
	</mx:VBox>
</BaseActivePopulatedComponentCode>
